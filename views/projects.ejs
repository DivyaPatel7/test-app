<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/main.css" />
    <link rel="stylesheet" href="/css/tailwind.css" />
    <title>Projects</title>
  </head>
  <body>
    <%- include('partials/navbar', { page: '/solutions/projects' }) %>

    <div class="container mx-auto p-4">
      <div class="hero bg-base-200 rounded-lg p-6 mb-8">
        <div class="hero-content text-center">
          <div class="max-w-md">
            <h1 class="text-5xl font-bold">Projects</h1>
            <p class="py-6">
              Browse through our projects and explore various sectors:
              <a href="/solutions/projects?sector=Industry" class="btn btn-secondary btn-xs">Industry</a>
              <a href="/solutions/projects?sector=Transportation" class="btn btn-secondary btn-xs">Transportation</a>
              <a href="/solutions/projects?sector=Land Sinks" class="btn btn-secondary btn-xs">Land Sinks</a>
            </p>
          </div>
        </div>
      </div>

      <div class="overflow-x-auto">
        <table class="table table-zebra w-full">
          <thead>
            <tr>
              <th>Image</th>
              <th>Title</th>
              <th>Sector</th>
              <th>Summary</th>
              <th>Details</th>
            </tr>
          </thead>
          <tbody>
            <% projects.forEach(project => { %>
            <tr>
              <td>
                <div class="avatar">
                  <div class="w-32 rounded">
                    <img src="<%= project.feature_img_url %>" alt="<%= project.title %>" />
                  </div>
                </div>
              </td>

              <td><%= project.title %></td>

              <td>
                <a href="/solutions/projects?sector=<%= project.sector %>" class="btn btn-secondary btn-xs">
                  <%= project.sector %>
                </a>
              </td>

              <td><%= project.summary_short %></td>

              <td>
                <a href="/solutions/projects/<%= project.id %>" class="btn btn-primary btn-sm">Details</a>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
