<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/project.css">
    <link rel="stylesheet" href="/css/main.css" />
    <link rel="stylesheet" href="/css/tailwind.css" />
    <title><%= project.title %></title>
  </head>
  <body>
    <%- include('partials/navbar', { page: '' }) %>

    <div class="container mx-auto p-4">
      <div class="hero bg-base-200 rounded-lg p-6 mb-8">
        <div class="hero-content text-center">
          <div class="max-w-md">
            <h1 class="text-5xl font-bold"><%= project.title %></h1>
            <p class="py-6">
              Below, you will find detailed information about the project: <%= project.title %>.
            </p>
          </div>
        </div>
      </div>
    </div>

    <section class="project-details">
      <div class="container">
        <div class="card lg:card-side bg-base-100 shadow-xl">
          <figure>
            <img
              src="<%= project.feature_img_url %>"
              alt="<%= project.title %>"
              class="img-fluid project-image"
            />
          </figure>
          <div class="card-body">
            <h2 class="card-title">Project: <%= project.title %></h2>
            <p><strong>Introduction:</strong> <%= project.intro_short %></p>
            <p><strong>Impact:</strong> <%= project.impact %></p>
            <a
              href="<%= project.original_source_url %>"
              target="_blank"
              class="btn btn-primary"
              >Learn More</a
            >
            <br /><br />
            <p id="random-quote" class="italic text-gray-600"></p>
            <a
              href="#"
              onclick="history.back(); return false;"
              class="btn btn-sm btn-secondary mt-4"
              >Back</a
            >
          </div>
        </div>
      </div>
    </section>

    <script>
      document.addEventListener("DOMContentLoaded", () => {
        fetch('https://dummyjson.com/quotes/random')
          .then(response => response.json())
          .then(data => {
            const quote = document.getElementById('random-quote');
            quote.innerHTML = `<p>"${data.quote}"</p><footer>- ${data.author}</footer>`;
          })
          .catch(error => console.error('Error fetching quote:', error));
      });
    </script>

    <style>
      .project-details .project-image {
        width: 100%;
        max-width: 550px;
        border-radius: 1em;
        height: auto;
        margin-left: 20px;
      }
    </style>
  </body>
</html>
